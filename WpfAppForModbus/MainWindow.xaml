<Window x:Class="WpfAppForModbus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Монитор портов" Height="500" Width="900" ResizeMode="CanMinimize" Icon="/control-panel.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="LeftMenuStackPanel" Width="170" Grid.Column="0" Background="#303030" VerticalAlignment="Stretch">
            <TextBlock Cursor="Hand" Name="PortsMenuItemText" Text="Датчики" Padding="15,8" Margin="5,10,5,5"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
            <TextBlock Cursor="Hand" Name="LogMenuItemText" Text="Лог" Padding="15,8" Margin="5,10,5,5"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
            <TextBlock Cursor="Hand" Name="AnalyzeMenuItemText" Text="Анализ" Padding="15,8" Margin="5,10,5,5"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
            <TextBlock Cursor="Hand" Name="SettingsMenuItemText" Text="Настройки" Padding="15,8" Margin="5,10,5,5"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
        </StackPanel>

        <Label Content="{StaticResource AppVersion}" Padding="5,10"
                   Foreground="#BDBDBD" FontWeight="Normal"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <Grid Grid.Column="1">
            <Grid x:Name="PortsContent">
                <Border Padding="10">
                    <StackPanel>
                        <materialDesign:Card Margin="5" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" FontSize="16" Content="В обмене участвуют: "></Label>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                                    <CheckBox Foreground="IndianRed" Content="{materialDesign:PackIcon ThermometerCheck}" Name="SensorTemperature"></CheckBox>
                                    <CheckBox Foreground="Indigo" Content="{materialDesign:PackIcon ThermometerWater}" Name="SensorWater"></CheckBox>
                                    <CheckBox Foreground="Green" Content="{materialDesign:PackIcon Gauge}" Name="SensorBar"></CheckBox>
                                    <CheckBox Foreground="Brown" Content="{materialDesign:PackIcon Brightness6}" Name="SensorLight"></CheckBox>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>

                        <Label Content="Статистика" FontSize="20" FontWeight="DemiBold" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Grid.Row="0" Content="Сообщений отправлено:"/>
                            <Label Grid.Column="1" Grid.Row="0" Content="0" Name="StatCounterSend"/>

                            <Label Grid.Column="0" Grid.Row="1" Content="Сообщений получено:"/>
                            <Label Grid.Column="1" Grid.Row="1" Content="0" Name="StatCounterGet"/>
                        </Grid>

                        <Label Content="Настройки подключения" FontSize="20" FontWeight="DemiBold" />

                        <materialDesign:Card Margin="5" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Content="Порт:" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="1" Grid.Row="0" Name="comboBoxPorts" Width="200"></ComboBox>

                                <Label Grid.Column="2" Grid.Row="0" Content="Паритетность:" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="3" Grid.Row="0" Width="200" Name="comboBoxParity"></ComboBox>

                                <Label Grid.Column="0" Grid.Row="1" Content="Передаваемые биты:" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="1" Grid.Row="1" Width="200" Name="comboBoxDataBits"></ComboBox>

                                <Label Grid.Column="2" Grid.Row="1" Content="Стоп-биты:" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="3" Grid.Row="1" Width="200" Name="comboBoxStopBit"></ComboBox>

                                <Label Grid.Column="0" Grid.Row="2" Content="Тип рукопожатия:" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="1" Grid.Row="2" Width="200" Name="comboBoxHandshake"></ComboBox>

                                <Label Grid.Column="2" Grid.Row="2" Content="Рейты:" VerticalAlignment="Center" />
                                <ComboBox Grid.Column="3" Grid.Row="2" Width="200" Name="comboBoxBaudRate"></ComboBox>

                                <Button Grid.Column="0" Margin="5" Grid.ColumnSpan="2" Grid.Row="3" Content="Запуск обработки" Name="StartHandle" Click="Button_Connect" Style="{DynamicResource MaterialDesignFlatButton}" Cursor="Hand" Foreground="{StaticResource Green}"/>
                                <Button Grid.Column="2" Margin="5" Grid.ColumnSpan="2" Grid.Row="3" Content="Остановить" IsEnabled="False" Name="StopHandle" Style="{DynamicResource MaterialDesignFlatButton}" Cursor="Hand" Foreground="{StaticResource Red}" Click="StopHandle_Click" />
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Height="110" Margin="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBox IsEnabled="False" Name="PortsLogBox" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                            </Grid>
                        </materialDesign:Card>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid x:Name="LogContent" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Name="Log" Grid.Row="0" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <Grid Grid.Row="1" Margin="10">
                        <CheckBox Grid.Column="0" Content="Попутно сохранять журнал в файл" Name="SaveLogsToFile" IsChecked="False" Checked="SaveLogsToFile_Checked" />
                        <Button Grid.Column="1" HorizontalAlignment="Right" Content="Очистить лог" Style="{DynamicResource MaterialDesignToolButton}" Margin="10" Click="Button_Click"/>
                    </Grid>
                </Grid>

            </Grid>

            <Grid x:Name="AnalyzeContent" Visibility="Collapsed">
                <Label Content="Контент для пункта 'Анализ'" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>

            <Grid x:Name="SettingsContent" Visibility="Collapsed">
                <Label Content="Контент для пункта 'Настройки'" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
