<Window x:Class="WpfAppForModbus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Монитор портов" Height="500" Width="800" ResizeMode="CanMinimize" Icon="/control-panel.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="LeftMenuStackPanel" Width="170" Grid.Column="0" Background="#303030" VerticalAlignment="Stretch">
            <TextBlock Cursor="Hand" Name="PortsMenuItemText" Text="Датчики" Padding="15,5" Margin="5,10,5,5"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
            <TextBlock Cursor="Hand" Name="LogMenuItemText" Text="Лог" Padding="15,5" Margin="5,10,5,5"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
            <TextBlock Cursor="Hand" Name="AnalyzeMenuItemText" Text="Анализ" Padding="15,5" Margin="5,10,5,5"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
        </StackPanel>

        <Label Content="{StaticResource AppVersion}" Padding="5,10"
                   Foreground="#BDBDBD" FontWeight="Normal"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <Grid Grid.Column="1">
            <Grid x:Name="PortsContent" Visibility="Collapsed">
                <Border Padding="10">
                    <StackPanel>
                        <materialDesign:Card Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Padding="10" VerticalAlignment="Center" FontSize="18"  FontWeight="Bold" Content="Датчик температуры"/>

                                <Label Grid.Column="1" Padding="10" VerticalAlignment="Center" FontSize="14"  FontWeight="Bold" Content="70C"/>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Padding="10" VerticalAlignment="Center" FontSize="18"  FontWeight="Bold" Content="Датчик света"/>

                                <Label Grid.Column="1" Padding="10" VerticalAlignment="Center" FontSize="14"  FontWeight="Bold" Content="700 люменов"/>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Padding="10" VerticalAlignment="Center" FontSize="18"  FontWeight="Bold" Content="Датчик влажности"/>

                                <Label Grid.Column="1" Padding="10" VerticalAlignment="Center" FontSize="14"  FontWeight="Bold" Content="70%"/>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Label Padding="10" VerticalAlignment="Center" FontSize="18"  FontWeight="Bold" Content="Датчик давления"/>
                                <Label Grid.Column="1" Padding="10" VerticalAlignment="Center" FontSize="14"  FontWeight="Bold" Content="700мм рт."/>
                            </Grid>
                        </materialDesign:Card>

                        <materialDesign:Card Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="10">
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <Label Content="Порт:" VerticalAlignment="Center" />
                                        <ComboBox Name="comboBoxPorts" Width="200"></ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <Label Content="Паритетность:" VerticalAlignment="Center" />
                                        <ComboBox Width="200" Name="comboBoxParity"></ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <Label Content="Количество бит:" VerticalAlignment="Center" />
                                        <ComboBox Width="200" Name="comboBoxDataBits"></ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <Label Content="Количество стоп-бит:" VerticalAlignment="Center" />
                                        <ComboBox Width="200" Name="comboBoxStopBit"></ComboBox>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="10">
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <Label Content="Тип рукопожатия:" VerticalAlignment="Center" />
                                        <ComboBox Width="200" Name="comboBoxHandshake"></ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="10">
                                        <Label Content="Рейты:" VerticalAlignment="Center" />
                                        <ComboBox Width="200" Name="comboBoxBaudRate"></ComboBox>
                                    </StackPanel>

                                    <Button Content="Запуск обработки" Margin="0,20,0,0" Name="StartHandle" Click="Button_Connect" Style="{DynamicResource MaterialDesignFlatButton}" Cursor="Hand" Foreground="{StaticResource Green}"/>
                                    <Button Content="Остановить" IsEnabled="False" Name="StopHandle" Style="{DynamicResource MaterialDesignFlatButton}" Cursor="Hand" Foreground="{StaticResource Red}" Click="StopHandle_Click" />
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid x:Name="LogContent">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox Name="Log" Grid.Row="0" Margin="10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

                    <Grid Grid.Row="1" Margin="10">
                        <CheckBox Grid.Column="0" Content="Попутно сохранять журнал в файл" Name="SaveLogsToFile" IsChecked="False" Checked="SaveLogsToFile_Checked" />
                        <Button Grid.Column="1" HorizontalAlignment="Right" Content="Очистить лог" Style="{DynamicResource MaterialDesignToolButton}" Margin="10" Click="Button_Click"/>
                    </Grid>
                </Grid>

            </Grid>

            <Grid x:Name="AnalyzeContent" Visibility="Collapsed">
                <Label Content="Контент для пункта 'Анализ'" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
