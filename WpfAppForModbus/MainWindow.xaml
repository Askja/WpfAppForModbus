<Window x:Class="WpfAppForModbus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Монитор портов" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="LeftMenuStackPanel" Width="170" Grid.Column="0" Background="#303030" VerticalAlignment="Stretch">
            <TextBlock Cursor="Hand" Name="PortsMenuItemText" Text="Порты" Padding="15,10" Margin="0,0,0,10"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
            <TextBlock Cursor="Hand" Name="LogMenuItemText" Text="Лог" Padding="15,10" Margin="0,0,0,10"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
            <TextBlock Cursor="Hand" Name="SettingsMenuItemText" Text="Настройки" Padding="15,10" Margin="0,0,0,10"
                       Foreground="White" FontWeight="Normal" TextDecorations="{x:Null}"
                       MouseDown="MenuItem_Click"/>
        </StackPanel>

        <TextBlock x:Name="VersionText" Text="Версия 1.0.2405" Padding="5,10"
                   Foreground="#BDBDBD" FontWeight="Normal"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>

        <Grid Grid.Column="1">
            <!-- Контент для каждого пункта меню -->
            <Grid x:Name="PortsContent" Visibility="Collapsed">
                <Label Content="Контент для пункта 'Порты'" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>

            <Grid x:Name="LogContent" Visibility="Collapsed">
                <Label Content="Контент для пункта 'Лог'" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>

            <Grid x:Name="SettingsContent" Visibility="Collapsed">
                <Label Content="Контент для пункта 'Настройки'" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
